<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingsFragments.SettingsFOC">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_variable_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Variable Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_kp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Kp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_ki"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Ki"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_kd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Kd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_kc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Kc"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_dead_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Dead Time"
                android:textSize="16sp" />

        </LinearLayout>
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_ram_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RAM Value"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_ram_kp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txt_ram_ki"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txt_ram_kd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txt_ram_kc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txt_ram_dt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_eeprom_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EEPROM Value"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_eeprom_kp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:text="TextView" />
            <TextView
                android:id="@+id/txt_eeprom_ki"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/txt_eeprom_kd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txt_eeprom_kc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:text="TextView" />
            <TextView
                android:id="@+id/txt_eeprom_dt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:text="TextView" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>